<% if review.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
            <ul>
                <% review.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
<h2>Review of <%= @activity.title %></h2>
<%= form_for([ activity, review]) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :activity_id, value: activity.id %>
  <label>Title</label><br>
  <%= f.text_field :title, class: "form-control" %><br>
  <label>How many stars would you give this activity? (Enter 1 - 5)</label>
  <%= f.text_field :rating, class: "form-control" %><br>
  <span id="1star" class="star fa fa-star-o"></span>
  <span id="2star" class="star fa fa-star-o"></span>
  <span id="3star" class="star fa fa-star-o"></span>
  <span id="4star" class="star fa fa-star-o"></span>
  <span id="5star" class="star fa fa-star-o"></span>
  <br>
  <label>Comments</label><br>
  <%= f.text_area :comment, class: "form-control" %><br>
  <div class="row justify-content-between">
    <div class="col">
      <!-- <% if review.persisted? %>
        <%= f.submit class: "btn btn-outline-dark" %>
      <% else %>
        <button type="button" class="btn btn-outline-dark" id="submit_new_review">Create Review</button>
      <% end %> -->
      <%= f.submit class: "btn btn-outline-dark" %>
    </div>
    <!-- <div class="col-md-3">
      <%# link_to "Back to activity", activity_path(@activity), class: "btn btn-outline-dark" %>
    </div> -->
    <div class="col-md-3">
      <button type="button" class="btn btn-outline-dark" id="remove_form">Cancel</button>
    </div>
  </div>

<% end %>

<script type="text/javascript">
  $(".star").click(function(e){
    alert(this)
  })
</script>

<script type="text/javascript">
  $("#remove_form").click(function(e){
    $("#review_form_placeholder").html("");
    $("#review_form").toggle()
  })
</script>

