      <section class="jumbotron text-center">
        <div id="popCategories" class="container">
          <h1 class="jumbotron-heading">Popular Categories</h1>
          <br>
          <%= render partial: "categories/category_card", locals: { categories: @first_six_categories } %>
          <div class="row">
            <div class="col">
              <%# link_to "See all categories", categories_path, class: "btn btn-outline-dark my-2" %>
              <button type="button" id="viewAllCategories" class="btn btn-outline-dark my-2">See all categories</button>
            </div>

          </div>
        </div>
