<div class="album bg-light py-5 px-5 my-5">
  <h1><%= @activity.title %></h1>
  <br>
  <% if @activity.photos.count > 0 %>
    <div class="row">
      <% @photos.each do |photo| %>
        <div class="col">
          <%= image_tag photo.image.url(:medium) %>
          <p><%= photo.description %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>There are currently no photos in this gallery</p>
  <% end %>
  <div class="row justify-content-between">
    <div class="col">
      <%= link_to "Upload a photo", new_activity_photo_path(@activity), class: "btn btn-outline-dark" if signed_in?%>
    </div>
    <div class="col-md-3">
      <%= link_to "Back to activity", activity_path(@activity), class: "btn btn-outline-dark" %>
    </div>
  </div>
</div>
