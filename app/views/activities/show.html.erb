<h1><%= @activity.title %></h1>
<p><%= @activity.description %></p>
<br>
<%= link_to "Edit Activity", edit_activity_path(@activity), class: "btn btn-primary" %>
<br><br>
<% if @activity.location %>
  <%= render partial: 'locations/location_card', locals: { location: @activity.location } %>
<% end %>

<br><br>
<h3>Categories</h3>
<% @activity.categories.each do |category| %>
<span><%= category.title %> &emsp;</span>
<% end %>

<br><br><br>
<h3>Reviews</h3>
<% @activity.reviews.each do |review| %>
  <div class="review-box card">
    
    <div class="card-header">
      <%= review.rating %> Stars! <%= review.title %>
    </div>
    <div class="card-body">
      <div class="comment-box">
        <p><%= review.comment %></p>
      </div>
      <div class="card-footer">
        <p>~<%= review.user.email %></p>
        <p><%= review.updated_at.strftime("%m/%d/%Y") %></p>
      </div>
    </div>
  </div>
  <% if current_user == review.user %>
    <%= link_to "Edit your review", edit_activity_review_path(id: review.id, activity_id: @activity.id), class: "btn btn-primary" %>
  <% end %>
  <br><br>

<% end %>
<br><br>
<%= link_to "Write a review for this activity", new_activity_review_path(@activity) %>
